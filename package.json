{
  "name": "@manuth/temp-files",
  "version": "1.1.3",
  "description": "Provides the functionality to handle temporary files and directories the object-oriented way.",
  "author": "Manuel Thalmann <m@nuth.ch>",
  "license": "MIT",
  "keywords": [
    "filesystem",
    "temporary",
    "file",
    "directory"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "homepage": "https://github.com/manuth/TempFiles#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manuth/TempFiles.git"
  },
  "bugs": {
    "url": "https://github.com/manuth/TempFiles/issues"
  },
  "scripts": {
    "compile": "tsc -p .",
    "build": "tsc -b tsconfig.build.json",
    "rebuild": "npm run clean && npm run build",
    "watch": "npm run build -- --watch",
    "clean": "npm run build -- --clean && rimraf ./lib",
    "lint-base": "eslint --max-warnings 0 --ignore-pattern \"!.eslintrc.js\"",
    "lint": "npm run lint-base -- --ext .js,.jsx,.ts,.tsx ./src .eslintrc.js",
    "lint-compact": "npm run lint -- -f compact || exit 0",
    "test": "mocha",
    "prepare": "npm run rebuild"
  },
  "dependencies": {
    "@types/tmp": "0.2.0",
    "fs-extra": "^9.0.1",
    "tmp": "0.2.1"
  },
  "devDependencies": {
    "@manuth/eslint-plugin-typescript": "^2.1.2",
    "@manuth/tsconfig": "^1.2.2",
    "@types/fs-extra": "^9.0.1",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.6.2",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/eslint-plugin-tslint": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "eslint": "^7.8.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsdoc": "^30.3.1",
    "mocha": "^8.1.3",
    "rimraf": "^3.0.2",
    "tslint": "^6.1.3",
    "typescript": "^4.0.2",
    "typescript-eslint-plugin": "^1.2.1"
  }
}
