{
  "name": "@manuth/temp-files",
  "version": "2.0.4",
  "description": "Provides the functionality to handle temporary files and directories the object-oriented way.",
  "author": "Manuel Thalmann <m@nuth.ch>",
  "license": "MIT",
  "keywords": [
    "filesystem",
    "temporary",
    "file",
    "directory"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "directories": {
    "lib": "lib"
  },
  "homepage": "https://github.com/manuth/TempFiles#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manuth/TempFiles.git"
  },
  "bugs": {
    "url": "https://github.com/manuth/TempFiles/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "compile": "tsc -p .",
    "build": "tsc -b tsconfig.build.json",
    "rebuild": "npm run clean && npm run build",
    "watch": "npm run build -- --watch",
    "clean": "npm run build -- --clean && rimraf ./lib",
    "lint-base": "eslint --max-warnings 0 --ignore-pattern \"!.eslintrc.js\"",
    "lint": "npm run lint-base -- --ext .js,.jsx,.ts,.tsx ./src .eslintrc.js",
    "lint-ide": "npm run lint || exit 0",
    "test": "mocha",
    "prepare": "npm run rebuild"
  },
  "dependencies": {
    "fs-extra": "^9.1.0",
    "randexp": "^0.5.3"
  },
  "devDependencies": {
    "@manuth/eslint-plugin-typescript": "^2.3.8",
    "@manuth/tsconfig": "^1.2.9",
    "@manuth/typescript-eslint-plugin": "^1.3.4",
    "@types/fs-extra": "^9.0.10",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/eslint-plugin-tslint": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "eslint": "^7.23.0",
    "eslint-plugin-deprecation": "^1.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^32.3.0",
    "mocha": "^8.3.2",
    "rimraf": "^3.0.2",
    "tslint": "^6.1.3",
    "typescript": "^4.2.3"
  }
}
